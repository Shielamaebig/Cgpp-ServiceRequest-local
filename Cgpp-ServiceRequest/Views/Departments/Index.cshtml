
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Departments";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between mx-2 fw-semibold">
                    Departments
                    <button class="btn btn-sm btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#departmentAdd">
                        <i class="fas fa-solid fa-plus fa-sm text-white-50"></i> Add Department
                    </button>
                </h4>
                <h6 class="card-subtitle"></h6>
                <div class="table-responsive">
                    <table id="departmentList" class="table table-condensed display">
                        <thead>
                            <tr>
                                <th>Date Added</th>
                                <th>Departments</th>
                                <th>Ftp Label</th>
                                <th>Ftp Host</th>
                                <th>Department Approver</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="departmentAdd" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-m modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading" id="exampleModalLabel"><h4 class="card-title d-flex justify-content-between fw-semibold">Department</h4></p>
            </div>
            <div class="modal-body">
                <form id="save">
                    <div class="row">
                        <div class="form-group">
                            <label for="">Department Name</label>
                            <input type="text" class="form-control mt-3 mb-3" name="name" placeholder="Department" id="name" required />
                        </div>

                        <div class="form-group">
                            <label for="">Ftp</label>
                            <select type="text" class="form-control mt-3 mb-3" name="ftpId" id="ftpId" required></select>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label>Is Has Department Approver</label>
                        <select class="form-control mt-1 mb-3" id="isDepartmentApprover" name="isDepartmentApprover" style="width:100%;">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    <input type="hidden" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" value=" submit" class="btn btn-success " id="btnSubmit">Submit</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-m modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading" id="exampleModalLabel"><h4 class="card-title d-flex justify-content-between fw-semibold">Department</h4></p>
            </div>
            <div class="modal-body">
                <form id="edit">
                    <div class="row">
                        <div class="form-group">
                            <label for="">Department Name</label>
                            <input type="text" class="form-control mt-3 mb-3" name="name" placeholder="Department" id="name" required />
                        </div>
                        <div class="form-group">
                            <label for="">Ftp</label>
                            <select type="text" class="form-control mt-3 mb-3" name="ftpId" id="ftpId" required>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <label>Is Has Department Approver</label>
                            <select class="form-control mt-1 mb-3" id="isDepartmentApprover" name="isDepartmentApprover" style="width:100%;">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" value=" submit" class="btn btn-success " id="UpdateRecord">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="deleteModal">
    <div class="modal-dialog modal-m modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="card-title d-flex justify-content-between modal-title" style="padding:0;">Delete Department</h4>
                <a href="#" class="close" data-bs-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <h6 class="card-subtitle">Are you sure you want to Remove this Department?</h6>
            </div>
            <div class="modal-footer">
                <input type="hidden" name="DepartmentId" id="DepartmentId" />
                <a href="#" class="btn btn-danger" id="btnDelete">Confirm</a>
                <a href="#" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "ForgotRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between mx-2">
                    User Forgot Password / Email
                </h4>
                <h6 class="card-subtitle"></h6>
                <div class="table-responsive">
                    <table id="UserForgotList" class="table table-condensed display">
                        <thead>
                            <tr>
                                <th>Date Request</th>
                                <th>Full Name</th>
                                <th>Department</th>
                                <th>Division</th>
                                <th>Is Response</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="approvedUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-m" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">User Information</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="row g-3 needs-validation" id="UserInfo" novalidate>
                    <input type="hidden" id="id" name="id" />
                    <div class="col-12">
                        <label for="fullName" class="form-label">First Name</label>
                        <div class="input-group has-validation">
                            <input type="text" name="firstName" class="form-control" id="firstName" readonly>
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="middleName" class="form-label">Middle Name</label>
                        <div class="input-group has-validation">
                            <input type="text" name="middleName" class="form-control" id="middleName" readonly>
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="lastName" class="form-label">Last Name</label>
                        <div class="input-group has-validation">
                            <input type="text" name="lastName" class="form-control" id="lastName" readonly>
                        </div>
                    </div>
                    <div class="col-12 ">
                        <label for="fullName" class="form-label">Department</label>
                        <div class="input-group has-validation">
                            <input class="form-control" name="departmentName" id="departmentName" readonly />
                        </div>
                    </div>

                    <div class=" col-12 ">
                        <label for="phoneNumber" class="form-label">Division</label>
                        <div class="input-group has-validation">
                            <input class="form-control" name="divisionName" id="divisionName" readonly />
                        </div>
                    </div>

                    <div class=" col-12 mt-0">
                        <label for="phoneNumber" class="form-label">Mobile Number</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-mobile-alt"></i></span>
                            <input type="text" name="mobileNumber" class="form-control" id="mobileNumber" readonly>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" id="updateuser" class="btn btn-success approve" data-bs-dismiss="modal">Approve User</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            ForgotPassword();
        })
    </script>
}
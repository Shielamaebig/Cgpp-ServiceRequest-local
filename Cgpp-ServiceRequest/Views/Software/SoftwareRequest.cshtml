
@{
    ViewBag.Title = "SoftwareRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Users"))
{
        <h4 class="card-title d-flex justify-content-between mx-2">
            Software Category Services
        </h4>

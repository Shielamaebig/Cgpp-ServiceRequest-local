@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="/ServiceRequest/image/cgpp-2.png" class="rounded-circle mt-4" style=" width: 120px !important; height: 120px !important;" />
                    <h2 class="card-title fw-semibold">Roles & Privileges</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="/ServiceRequest/image/icon-admin-2.png" class="mt-5 ms-3" style=" width: 160px !important; height: 160px !important;" />
                    @if (User.IsInRole("Developer"))
                    {
                        <button class="btn btn-primary mt-4 mb-3" onclick="location.href = '@Url.Action("Create", "Roles")' ">Create Roles</button>
                    }
                </div>
            </div>
        </div>
 </div>

    <div class="col-8">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <h4 class="card-title d-flex pt-3 pb-3 fw-semibold text-center justify-content-center">
                        Role Name
                    </h4>
                        <div class="col-12">
                            <div class="form-check" style="width: 200px; margin: 0 auto;  text-align: left; position: relative;  left: 0;  right: 0;">
                                <div class="table-responsive">
                                    <table id="hardwareRequestList" class=" table-condensed display">
                                        <tbody class="justify-content-center">
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td style="border:none;">@item.Name</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "AllRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="card-title mb-2 ms-2">
    All Request
</h4>
<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between mx-2">
                </h4>
                <h6 class="card-subtitle"></h6>
                <div class="table-responsive">

                    <table id="hardwareRequestList" class="table table-condensed display">
                        <thead>
                            <tr>
                                <th>Ticket</th>
                                <th>Reported by</th>
                                <th>Date Posted</th>
                                <th>Issue</th>
                                <th>Status</th>
                                <th>Technician</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade " id="viewmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <p class="heading card-title" id="exampleModalLabel">
                    <h5 class="heading card-title d-flex justify-content-center text-center ">  Request Details</h5>
                </p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body pt-3">
                            <!-- Bordered Tabs -->
                            <ul class="nav nav-tabs nav-tabs-bordered">

                                <li class="nav-item">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#request-overview">Request</button>
                                </li>

                                <li class="nav-item">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#attachments">Attachments</button>
                                </li>
                            </ul>
                            <div class="tab-content pt-2">
                                <div class="tab-pane fade show active profile-overview" id="request-overview">
                                    <form id="viewRequest">
                                        <div class="row">
                                            <div class="mb-4 text-center mt-4">
                                                <small class="card-title">Client Information</small>
                                            </div>
                                            <div class="form-group col-8 col-sm-6">
                                                <label for="">Name</label>
                                                <input type="text" class="form-control mb-2" name="fullName" id="fullName" disabled />
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="">Phone Number</label>
                                                <input type="text" class="form-control mb-2" name="mobileNumber" id="mobileNumber" disabled />
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="">Department</label>
                                                <input class="form-control" id="departmentName" name="departmentName" disabled />
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="">Division</label>
                                                <input class="form-control" id="divisionName" name="divisionName" disabled />
                                            </div>

                                            <div class=" text-center mt-3">
                                                <small class="card-title">Hardware Request Details</small>
                                            </div>
                                            <div class="form-group col-8 col-sm-6 mt-3">
                                                <label for="">Service Category</label>
                                                <input type="text" class="form-control mb-2" name="hardwareName" id="hardwareName" disabled />
                                            </div>
                                            <div class="form-group col-sm-6 mt-3">
                                                <label for=""> Model Name</label>
                                                <input type="text" class="form-control mb-2" name="modelName" id="modelName" disabled />
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label for=""> Unit</label>
                                                <input class="form-control" id="uniTypes" name="uniTypes" disabled />
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label for="">Brand Name</label>
                                                <input class="form-control" id="brandName" name="brandName" disabled />
                                            </div>
                                            <div class="row mt-4">
                                                <label for="FileName" class="col col-form-label ">Subject : </label>
                                                <div class="col-md-10">
                                                    <input type="text" class="form-control ms-4" id="documentLabel" name="FileName" disabled />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="" class="mt-3">Description</label>
                                                <textarea class="form-control mb-5" id="description" name="description" style="height: 200px;" disabled> </textarea>
                                            </div>

                                            <input type="hidden" id="hardwareUserRequestId" name="hardwareUserRequestId" />

                                        </div>
                                    </form>
                                </div>

                                <div class="tab-pane fade pt-3" id="attachments">
                                    <table id="UploadList" class="table table-striped" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Date Added
                                                </th>
                                                <th>
                                                    Image
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>


                                <div class="tab-pane fade pt-3" id="profile-settings">
                                    <form id="techForm">
                                        <div class="row">
                                            <div class="mb-4 text-center mt-4">
                                                <small class="card-title">Technician Report</small>
                                            </div>
                                            <div class="form-group col-md-6 mb-2">
                                                <label for="">Technician</label>
                                                <input class="form-control mt-2 mb-3" name="technicianName" id="technicianName" disabled />
                                            </div>
                                            <div class="form-group col-md-6 mb-2">

                                            </div>
                                            <div class="form-group col-md-6 mb-2">
                                                <label for="">Hardware Services</label>
                                                <input class="form-control mt-2 mb-3" name="hardwareName" id="hardwareName" disabled />
                                            </div>
                                            <div class="form-group col-md-6 mb-2">
                                                <label for="">Unit Name :</label>
                                                <input class="form-control mt-2 mb-3" name="uniTypes" id="uniTypes" disabled />
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label for="">Unit Brand</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="brandName" id="brandName" disabled />
                                            </div>
                                            <div class="form-group col-8 col-sm-6">
                                                <label for="">Model Name</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="modelName" id="modelName" disabled />
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label for="">Findings After Repair</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="findingName" id="findingName" disabled />

                                            </div>
                                            <input type="hidden" id="HardwareUserRequestId" name="HardwareUserRequestId" />
                                            <div class="form-group col-8 col-sm-6">
                                                <label for="">Possible Cause</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="possibleCause" id="possibleCause" disabled />
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label for="">Serial Number</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="serialNumber" id="serialNumber" disabled />
                                            </div>
                                            <div class="form-group col-8 col-sm-6">
                                                <label for="">Unit Control No.</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="controlNumber" id="controlNumber" disabled />
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label for="">Date & Time Started</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="dateStarted" id="dateStarted" disabled />
                                            </div>
                                            <div class="form-group col-8 col-sm-6">
                                                <label for="">Date & Time Started</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="dateEnded" id="dateEnded" disabled />
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label for="">Verified By</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="adminName" id="adminName" disabled />
                                            </div>
                                            <div class="form-group col-8 col-sm-6">
                                                <label for="">Approved By</label>
                                                <input type="text" class="form-control mt-2 mb-3" name="superName" id="superName" disabled />
                                            </div>
                                            <input type="hidden" name="technicianReportId" id="technicianReportId" />
                                            <input type="hidden" id="id" name="id" />
                                            <div class="form-group">
                                                <label for="" class="mt-3">Remarks</label>
                                                <textarea class="form-control" id="remarks" name="remarks" style="height: 200px;" disabled> </textarea>
                                            </div>
                                        </div>

                                    </form>
                                </div>


                                <div class="tab-pane fade pt-3" id="tech-attachments">
                                    <form id="techuploads">
                                        <div class="table-responsive">
                                            <table id="TechUploadList" class="table table-striped" cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Date Added
                                                        </th>
                                                        <th>
                                                            Image
                                                        </th>
                                                        <th></th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                            <div class="col-md-12 text-center">
                                                <input type="hidden" name="id" id="id" />
                                                <button type="button" class="btn btn-primary btn-sm update-image" data-bs-toggle="modal" data-bs-target="#addimageModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" id="technicianReportId" name="technicianReportId">
                                                    Add Files
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div><!-- End Bordered Tabs -->
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade " id="ReportModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <p class="heading card-title" id="exampleModalLabel">
                    <h5 class="heading card-title d-flex justify-content-center text-center ">  Request Tracking</h5>
                </p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="transactional">
                <input type="hidden" id="hardwareUserRequestId" name="hardwareUserRequestId" />
            </form>

            <div class="modal-body">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body pt-3">
                            <table id="techList" class="table" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Date Assigned
                                        </th>
                                        <th>
                                            Task
                                        </th>
                                        <th>
                                            State
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade " id="editRequestModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading card-title" id="exampleModalLabel"><h5 class="card-title d-flex justify-content-between">  Update Request</h5></p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="EditRequest">
                    <div class="row">
                        <div class="form-group col-md-6 mt-3">
                            <label for="">Service Category</label>
                            <select type="text" class="form-control mb-2" name="hardwareId" id="hardwareId" required></select>
                        </div>
                        <div class="col-md-6">
                        </div>
                        <div class="form-group col-md-4 mb-3">
                            <label for="">Unit Name</label>
                            <select class="form-control mt-2 mb-3" name="unitTypeId" id="unitTypeId">
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for=""> Brand Name</label>
                            <input type="text" class="form-control mt-2 mb-2" name="brandName" id="brandName" required />
                        </div>
                        <div class="col-md-4">
                            <label for=""> Model Name</label>
                            <input type="text" class="form-control mt-2 mb-2" name="modelName" id="modelName" required />
                        </div>
                        <div class="col-md-6">
                            <label for=""> Date & Time Added</label>
                            <input type="datetime-local" class="form-control mt-2 mb-2" name="dateAdded" id="dateAdded" required />
                        </div>
                        <div class="col-md-6">
                            <label for=""> Date & Time Added </label>
                            <input type="datetime-local" class="form-control mt-2 mb-2" name="dateEnded" id="dateEnded" required />
                        </div>
                        <div class="col-md-12">
                            <label for=""> Remarks </label>
                            <textarea class="form-control mt-2 mb-2" name="remarks" id="remarks" required></textarea>
                        </div>
                        <input type="hidden" id="id" name="id" />
                    </div>
                    <div class="modal-footer">
                        <button id="UpdateRequest" type="button" class="btn btn-success update-request">Submit</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="cancelModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-s modal-notify modal-info" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <form id="cancelReq">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="row">
                        <p>Do you want to Cancel this Request?</p>
                    </div>
                    <input type="hidden" id="hardwareUserRequestId" name="hardwareUserRequestId" />

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button id="cancelled" type="button" class="btn btn-success update-request">Yes</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            HardwareAllRequest();

        })
    </script>
}
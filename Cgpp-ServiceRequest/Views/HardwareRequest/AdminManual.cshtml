@section scripts{
    <script>
        $(document).ready(function () {
            ManualRequest3();

            $('#btnSubmit').click(function (e) {
                e.preventDefault();


                //Remove Disable When Saving
                $('#departmentsId').attr("disabled", false);
                $('#divisionsId').attr("disabled", false);


                var formData = new FormData(manual);
                $.ajax({
                    type: 'POST',
                    url: '/api/Manual/v2/SaveRequest',
                    data: formData,
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('access_token')
                    },
                    success: function (data) {
                        console.log(data);
                        if (data == 'File uploaded!') {
                            $('#pleasewait').modal('show');
                            setTimeout(function () {
                                toastr.success(" Successfully Create Hardware Request!");
                                // hide please wait modal

                            }, 1000);
                            setTimeout(function () {
                                window.location.href = "/HardwareRequest/AdminIndex";
                            }, 1000);
                        }
                        else
                            toastr.error("Fill up alll forms / Invalid");
                    },
                    cache: false,
                    contentType: false,
                    processData: false,

                });
            });
        });

    </script>

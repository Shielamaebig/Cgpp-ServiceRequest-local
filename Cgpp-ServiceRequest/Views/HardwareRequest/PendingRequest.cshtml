
@{
    ViewBag.Title = "PendingRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="card-title d-flex justify-content-between fw-semibold">
    Pending Hardware Request
</h4>
@if (User.IsInRole("DivisionApprover"))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between mx-2">
                    </h4>
                    <h6 class="card-subtitle"></h6>
                    <div class="table-responsive">
                        <table id="hardwareUserList" class="table table-condensed display">
                            <thead>
                                <tr>
                                    <th>Ticket</th>
                                    <th>Date Posted</th>
                                    <th>Reported By</th>
                                    <th>Hardware Category</th>
                                    <th>Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (User.IsInRole("DepartmentApprover"))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between mx-2">
                    </h4>
                    <h6 class="card-subtitle"></h6>
                    <div class="table-responsive">
                        <table id="hardwareUserList2" class="table table-condensed display">
                            <thead>
                                <tr>
                                    <th>Ticket</th>
                                    <th>Date Posted</th>
                                    <th>Reported By</th>
                                    <th>Hardware Category</th>
                                    <th>Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (User.IsInRole("HardwareAdmin") || User.IsInRole("SuperAdmin"))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between mx-2">
                    </h4>
                    <h6 class="card-subtitle"></h6>
                    <div class="table-responsive">
                        <table id="hardwareUserListAdmin" class="table table-condensed display">
                            <thead>
                                <tr>
                                    <th>Ticket</th>
                                    <th>Date Posted</th>
                                    <th>Reported By</th>
                                    <th>Hardware Category</th>
                                    <th>Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal fade " id="viewmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <p class="heading card-title" id="exampleModalLabel">
                    <h5 class="heading card-title d-flex justify-content-center text-center fw-semibold">
                      Request Details
                    </h5>
                </p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row m-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#client-overview">Client Information</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#request-overview">Request</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#attachments">Attachments</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="client-overview">
                            <form id="viewRequestclient">
                                <div class="row">
                                    <div class="text-center">
                                        <small class="card-title fw-semibold">Client Information</small>
                                    </div>
                                    <div class="form-group col-8 col-sm-6">
                                        <label for="">Ticket Number</label>
                                        <input type="text" class="form-control mb-2" name="ticket" id="ticket" disabled />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for=""> Date Reported</label>
                                        <input type="text" class="form-control mb-2" name="dateAdded" id="dateAdded" disabled />
                                    </div>

                                    <div class="form-group col-8 col-sm-6">
                                        <label for="">Name</label>
                                        <input type="text" class="form-control mb-2" name="fullName" id="fullName" disabled />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="">Phone Number</label>
                                        <input type="text" class="form-control mb-2" name="mobileNumber" id="mobileNumber" disabled />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="">Department</label>
                                        <input class="form-control" id="departmentName" name="departmentName" disabled />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="">Division</label>
                                        <input class="form-control" id="divisionName" name="divisionName" disabled />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="">Any Desk</label>
                                        <input class="form-control" id="anyDesk" name="anyDesk" disabled />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="">Telephone No.</label>
                                        <input class="form-control" id="telNumber" name="telNumber" disabled />
                                    </div>
                                    <input type="hidden" id="id" name="id" />

                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade show " id="request-overview">
                            <form id="viewRequest">
                                <div class="row">
                                    <div class=" text-center mt-3">
                                        <small class="card-title fw-semibold">Hardware Request Details</small>
                                    </div>
                                    <div class="form-group col-8 col-sm-6 mt-3">
                                        <label for="">Service Category (Issue)</label>
                                        <input type="text" class="form-control mb-2" name="hardwareName" id="hardwareName" disabled />
                                    </div>
                                    <div class="form-group col-sm-6 mt-3">
                                        <label for=""> Model Name</label>
                                        <input type="text" class="form-control mb-2" name="modelName" id="modelName" disabled />
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for=""> Unit</label>
                                        <input class="form-control" id="uniTypes" name="uniTypes" disabled />
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="">Brand Name</label>
                                        <input class="form-control" id="brandName" name="brandName" disabled />
                                    </div>
                                    <div class="row mt-4">
                                        <label for="FileName" class="col col-form-label ">Subject : </label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control ms-4" id="documentLabel" name="FileName" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="mt-3">Description</label>
                                        <textarea class="form-control" id="description" name="description" style="height: 80px;" disabled> </textarea>
                                    </div>

                                    <input type="hidden" id="id" name="id" />

                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade pt-3" id="attachments">
                            <form id="addImage">
                                <div class="table-responsive">
                                    <table id="UploadList" class="table table-striped" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Date Added
                                                </th>
                                                <th>
                                                    Image
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>

                                </div>
                            </form>
                        </div>
                    </div><!-- End Bordered Tabs -->

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AcceptModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-s modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form id="accepts">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="row">
                        <p>Do you want to Approved this Request?</p>
                    </div>
                    <input type="hidden" id="hardwareUserRequestId" name="hardwareUserRequestId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button id="BtnAccept" type="button" class="btn btn-success update-request">Yes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="cancelModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-s modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form id="cancelReq">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="row">
                        <p>Do you want to Cancel this Request?</p>
                    </div>
                    <input type="hidden" id="hardwareUserRequestId" name="hardwareUserRequestId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button id="btnCancel" type="button" class="btn btn-success update-request">Yes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AcceptModal2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-s modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form id="acceptsReturn">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="row">
                        <p>Do you want to Approved this Request?</p>
                    </div>
                    <input type="hidden" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button id="BtnAccept2" type="button" class="btn btn-success update-request">Yes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="backModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-s modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form id="accepts2">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="row">
                        <p>Do you want to Return this Request to User?</p>
                    </div>
                    <input type="hidden" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button id="BtnReturn" type="button" class="btn btn-success update-request">Yes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade " id="Sendmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <p class="heading card-title" id="exampleModalLabel">
                    <h5 class="heading card-title d-flex justify-content-center text-center fw-semibold">  Send Message</h5>
                </p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-xl-12">
                    <form id="smsForm">
                        <input type="hidden" id="hardwareUserRequestId" name="hardwareUserRequestId" />
                        <div class="row m-2">
                          
                            <div class="form-group col-md-6 mb-2">
                                <label for="">Reported By</label>
                                <input class="form-control" name="fullName" id="fullName" readonly />
                            </div>
                            <div class="form-group col-md-6 mb-2">
                                <label for="">Ticket No.</label>
                                <input class="form-control " name="ticket" id="ticket" readonly />
                            </div>
                            <div class="form-group col-md-6 mb-2">
                                <label for="">Departmen</label>
                                <input class="form-control" name="departmentName" id="departmentName" readonly />
                            </div>
                            <div class="form-group col-md-6 mb-2">
                                <label for="">Division</label>
                                <input class="form-control " name="divisionName" id="divisionName" readonly />
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="">Number</label>
                                <input type="text" class="form-control " name="mobileNumber" id="mobileNumber" readonly />
                            </div>

                            <input type="hidden" id="id" name="id" />

                            <div class="form-group">
                                <label for="" class="mt-3">Message</label>
                                <textarea class="form-control" id="smsMessage" name="smsMessage" style="height: 80px;"> </textarea>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button id="sendSms" type="button" class="btn btn-success technician-report">Submit</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="AcceptModalReturn" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-s modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form id="acceptedReturn">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="row">
                        <p>Do you want to Approved this Request?</p>
                    </div>
                    <input type="hidden" id="hardwareUserRequestId" name="hardwareUserRequestId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button id="BtnAcceptReturn" type="button" class="btn btn-success update-request">Yes</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            HardwareRequestDiv();
        });
    </script>
}



<script type="text/javascript">

    $(document).ready(function () {
        $('#registerForm').submit(function (e) {
            e.preventDefault();
            var valdata = $(this).serialize();
            $.ajax({
                url: '/api/userForgotPassword/save',
                type: 'POST',
                data: valdata,
                success: function (data) {
                    $('#LoadingForgot').modal('show');
                },
                error: function (data) {
                    toastr.error('Error');
                }
            })
        });
    });
</script>
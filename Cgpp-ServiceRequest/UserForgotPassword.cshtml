<body class="">
    <section class="vh-100 login_background">
        <div class="container py-5 h-100">

            <div class="row d-flex justify-content-center align-items-center h-100">

                <div class=" col-xl-6 ">
                    <div class="card_login" style="border-radius: 1rem;">
                        <div class="row g-0 login_container z-2">
                            <div class=" justify-content-center" style="width: 190px; margin: -4rem auto ; text-align: left; position: relative; left: 2rem; right: 0; padding-left: 0; top:-1rem;">
                                <div class="brand_logo_container z-3 position-absolute">
                                    <img src="/Content/assets/img/cgpp-2.png" class="brand_logo" alt="logo" style=" width:150px;">
                                </div>
                            </div>
                            <div class="mt-5 mb-0 text-center">
                                <h2 class="card-title mt-4 text-center" style="margin-left:1.5rem;">Service Desk</h2>
                                <h2 class="card-title text-center" style="margin-left:1.5rem;">Forgot Password & Email</h2>
                            </div>
                            <form class="row needs-validation" id="registerForm" style=" margin-left:1px;" novalidate>
                                <div class="col-sm-4">
                                    <label for="fullName" class="form-label">First Name</label>
                                    <div class="input-group has-validation">
                                        <input type="text" name="firstName" class="form-control" id="firstName" required>
                                        <div class="invalid-feedback mb-0">Please enter your First Name.</div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <label for="middleName" class="form-label">Middle Name</label>
                                    <div class="input-group has-validation">
                                        <input type="text" name="middleName" class="form-control" id="middleName" required>
                                        <div class="invalid-feedback mb-0">Please enter your Middle Name.</div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <div class="input-group has-validation">
                                        <input type="text" name="lastName" class="form-control" id="lastName" required>
                                        <div class="invalid-feedback mb-0">Please enter your Last Name.</div>
                                    </div>
                                </div>

                                <div class="col-sm-6 mb-2">
                                    <label for="fullName" class="form-label">Department</label>
                                    <div class="input-group has-validation">
                                        <input type="text" name="departmentName" class="form-control" id="departmentName" required>
                                        <div class="invalid-feedback mb-0">Please enter your Department.</div>
                                    </div>
                                </div>
                                <div class=" col-sm-6 mb-2">
                                    <label for="phoneNumber" class="form-label">Division</label>
                                    <div class="input-group has-validation">
                                        <input type="text" name="divisionName" class="form-control" id="divisionName" required>
                                        <div class="invalid-feedback">Please enter your Division.</div>
                                    </div>
                                </div>

                                <div class=" col-sm-12 mt-0">
                                    <label for="phoneNumber" class="form-label">Mobile Number</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-mobile-alt"></i></span>
                                        <input type="text" name="mobileNumber" class="form-control" id="mobileNumber" placeholder="(63) 02 xxxx-xxxx " required>
                                        <div class="invalid-feedback">Please enter your Mobile Number.</div>
                                    </div>
                                </div>
                                <div class="mt-3 align-center text-center">
                                    <button class="btn btn-primary rounded-pill col-12 align-center" type="submit" id="FormSubmit">Submit</button>
                                </div>
                                <div class="col-12 mt-3 mb-5">
                                    <p class="small mb-0">Already have account? <a href="~/login.cshtml">Log In</a></p>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <div class="modal fade" id="LoadingForgot" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered  modal-notify modal-info modal-xl" role="document">
            <div class="modal-content">
                <a href="/Login.cshtml">
                    <div class="modal-body " style="height:45rem;">
                        <div class="d-flex justify-content-center m-3 mb-4">
                            <img src="/image/pngtree-fa-two-steps-authentication-password-secure-notice-login-verification-or-sms-png-image_4746695.png" class="mb-5" />
                        </div>
                        <div class="justify-content-center" style="width: 150px; margin: -4rem auto; text-align: left; position: relative; left: 2rem; right: 0; padding-left: 0; top: 0; bottom:30px;">
                            <div class="loader" style="margin-bottom:80px;">
                                <div></div>
                            </div>
                        </div>
                        <p class="card-title text-center pt-0 mt-0 ms-5">Please wait . . .</p>
                        <h2 class="alert alert-info text-center ms-3 mt-3" style="font-size:20px;">
                            Your registration is in process. We will message you once we find your Account.
                        </h2>
                        <p class="card-title text-center mt-3 mb-2">Click Anywhere If you Recieve the message</p>
                    </div>
                </a>
            </div>
        </div>
    </div>


</body>
</html>

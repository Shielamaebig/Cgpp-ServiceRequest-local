<script type="text/javascript">

var apiLocal = '/api';
var apiLive = '/ServiceRequest/api';
    $(document).ready(function () {
        $(function () {
            //Password Reveal
            $('#revealPassword').click(function () {
                if ($(this).hasClass('fa-eye-slash')) {
                    $(this).removeClass('fa-eye-slash');
                    $(this).addClass('fa-eye');
                    $('#password').attr('type', 'text');
                } else {
                    $(this).removeClass('fa-eye');
                    $(this).addClass('fa-eye-slash');
                    $('#password').attr('type', 'password');
                }
            });
        });
        $.ajax({
            type: 'GET',
            url: apiLocal + '/v1/roles/users',
            success: function (data) {
                // check data has content
                if (data.length > 0) {
                    console.log('data has content');
                } else {
                    // redirect to login page
                    window.location.href = "/ServiceRequest/CreateUser";
                }
            },
            //if failed
            error: function (data) {
                toastr.info("Success")
            }
        });
        if (localStorage.getItem("username") != null) {
            window.location.href = "/ServiceRequest/home";
        }
        $('#logInForm').submit(function (e) {
            // get role
            e.preventDefault();
            var formData = $(this).serialize();
            // define password
            var pass = $('#password').val();
            // grant type
            var grantType = 'password';
            // find email
            var userName = $('#userName').val();
            // define data
            var data = {
                grant_type: grantType,
                username: userName,
                password: pass
            };
            $('#loadingModal').modal('show');
            setTimeout(function () {
                $.ajax({
                    url: '/token',
                    type: 'POST',
                    data: data,
                    success: function (data) {
                        localStorage.setItem('access_token', data.access_token);
                        // store email to local storage
                        localStorage.setItem('username', data.userName);

                       
                        //alert(data.userName);
                        setTimeout(function () {
                            toastr.success('Welcome ' + data.userName);
                        }, 3000),
                            setTimeout(function () {
                                window.location.href = '/ServiceRequest';
                            }, 4000);
                    },
                    error: function (data) {
                        $('#loadingModal').modal('hide');
                        toastr.error('Login Failed');
                    }
                });
            }, 2000);
        });
    });
</script>
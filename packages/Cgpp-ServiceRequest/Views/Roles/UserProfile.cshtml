        <div class="col-xl-8">
            @foreach (var user in Model)
            {

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered" id="userProfile">

                            <li class="nav-item">
                                <button class="nav-link active view" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                            </li>
                            @if (User.IsInRole("Users"))
                            {
                                <li class="nav-item">
                                    <button class="nav-link update-details" data-bs-toggle="tab" id="@user.UserId" data-bs-target="#profile-edit">Edit Profile</button>
                                </li>
                            }

                            <li class="nav-item">
                                <button class="nav-link update-image" data-bs-toggle="tab" id="@user.UserId" data-bs-target="#profile-image">Edit Profile Image</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link change-pass" data-bs-toggle="tab" id="@user.UserId" data-bs-target="#profile-change-password">Change Password</button>
                            </li>

                        </ul>
                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-overview" id="profile-overview">

                                <h5 class="card-title">Profile Details</h5>
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                                    <div class="col-lg-9 col-md-8">@user.FullName</div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label ">Role Name</div>
                                    <div class="col-lg-9 col-md-8">
                                        @if (User.IsInRole("Developer"))
                                        {
                                            var roleName = "Developer";
                                            @roleName
                                        }
                                        else if (User.IsInRole("HardwareAdmin"))
                                        {
                                            var roleName = "Chief - Hardware Section";
                                            @roleName
                                        }
                                        else if (User.IsInRole("SoftwareAdmin"))
                                        {
                                            var roleName = "Software Head";
                                            @roleName
                                        }
                                        else if (User.IsInRole("SuperAdmin"))
                                        {
                                            var roleName = "Super Admin";
                                            @roleName
                                        }
                                        else if (User.IsInRole("Technicians"))
                                        {
                                            var roleName = "Technician";
                                            @roleName
                                        }
                                        else if (User.IsInRole("Programmers"))
                                        {
                                            var roleName = "Programmer";
                                            @roleName
                                        }
                                        else if (User.IsInRole("Technician"))
                                        {
                                            var roleName = "Technician";
                                            @roleName
                                        }
                                        else if (User.IsInRole("Users"))
                                        {
                                            var roleName = "Division Personnel";
                                            @roleName
                                        }
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Department</div>
                                    <div class="col-lg-9 col-md-8">
                                        @if (user.DepartmentsId == null)
                                        {

                                            <span>Not Applicable</span>
                                        }
                                        else
                                        {


                                            <span>
                                                @user.Departments.Name
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Division</div>
                                    <div class="col-lg-9 col-md-8">
                                        @if (user.DivisionsId == null)
                                        {

                                            <span>Not Applicable</span>
                                        }
                                        else
                                        {


                                            <span>
                                                @user.Divisions.Name
                                            </span>
                                        }
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Phone</div>
                                    <div class="col-lg-9 col-md-8">@user.MobileNumber</div>

                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email</div>
                                    <div class="col-lg-9 col-md-8">@user.Email</div>
                                </div>

                            </div>
                            @if (User.IsInRole("Users"))
                                {
                                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                                        <form id="chageDetails">

    <div class="modal-dialog modal-dialog-centered  modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex justify-content-center">
                    <div class="spinner-border text-primary mt-3" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <div class="justify-content-center">
                    <h2 class="text-center ms-3 mt-3" style="font-size:20px;">Loading...</h2>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            UserProfile();

            $(function () {
                //Password Reveal
                $('#revealPassword').click(function () {
                    if ($(this).hasClass('fa-eye-slash')) {
                        $(this).removeClass('fa-eye-slash');
                        $(this).addClass('fa-eye');
                        $('#newpassword').attr('type', 'text');
                    } else {
                        $(this).removeClass('fa-eye');
                        $(this).addClass('fa-eye-slash');
                        $('#newpassword').attr('type', 'password');
                    }
                });
            });

            $(function () {
                //Password Reveal
                $('#revealPasswordconfirm').click(function () {
                    if ($(this).hasClass('fa-eye-slash')) {
                        $(this).removeClass('fa-eye-slash');
                        $(this).addClass('fa-eye');
                        $('#confirmpassword').attr('type', 'text');
                    } else {
                        $(this).removeClass('fa-eye');
                        $(this).addClass('fa-eye-slash');
                        $('#confirmpassword').attr('type', 'password');
                    }
                });
            });

            $("#confirmpassword").bind('keyup change', function () {
                check_Password($("#newpassword").val(), $("#confirmpassword").val())
            })

            $("#changePass").click(function () {
                check_Password($("#newpassword").val(), $("#confirmpassword").val())
            })


            function check_Password(Pass, Con_Pass) {

                if (Pass === "") {

                } else if (Pass === Con_Pass) {

                    $("#changePass").removeAttr("onclick")
                    $('#confirm_password_msg').show()
                    $("#confirm_password_msg").html('<div class=" alert alert-success">Password matched</div>')

                    setTimeout(function () {
                        $('#confirm_password_msg').fadeOut('slow');
                    }, 4000);

                } else {
                    $("#confirm_password").focus()
                    $('#confirm_password_msg').show()
                    $("#confirm_password_msg").html('<div class=" alert alert-danger">Password did not matched</div>')

                    setTimeout(function () {
                        $('#confirm_password_msg').fadeOut('slow');
                    }, 4000);
                }
            }

        });
    </script>
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between mx-2">
                    Software Category Services
                    <button class="btn btn-sm btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#AddSoftware">
                        <i class="fas fa-solid fa-plus fa-sm text-white-50"></i> Add Category Services
                    </button>
                </h4>
                <h6 class="card-subtitle"></h6>
                <div class="table-responsive">
                    <table id="softwareList" class="table table-condensed display">
                        <thead>
                            <tr>
                                <th>Software</th>
                                <th>Request</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AddSoftware" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-m modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading" id="exampleModalLabel"><h4 class="card-title d-flex justify-content-between">Software Category Services</h4></p>
            </div>
            <div class="modal-body">
                <form id="save">
                    <div class="row">
                        <div class="form-group">
                            <label for="">Category Services</label>
                            <input type="text" class="form-control mt-2 mb-3" name="name" id="name" required />
                        </div>
                    </div>
                    <input type="hidden" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" value=" submit" class="btn btn-success " id="btnSubmit">Submit</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
  
<div class="modal fade" id="editmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-m modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading" id="exampleModalLabel"><h4 class="card-title d-flex justify-content-between">Software Category Services</h4></p>
            </div>
            <div class="modal-body">
                <form id="edit">
                    <div class="row">
                        <div class="form-group">
                            <label for="">Name</label>
                            <input type="text" class="form-control mt-2 mb-3" name="name" placeholder="Category Services" id="name" required />
                        </div>
                    </div>
                    <input type="hidden" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" value=" submit" class="btn btn-success " id="updateDate">Submit</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@*Modal Request*@
<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="softwarerequest" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading" id="exampleModalLabel"><h5>Service Request Form</h5></p>
            </div>
            <div class="modal-body">
                <form id="SaveRequest" name="SaveRequest">
                    <div class="row">
                        <div class="form-group col-md-6 mt-3 mb-3">
                            <label for="">Information System</label>
                            <select class="form-control" id="informationSystemId" name="informationSystemId"> </select>
                        </div>
                        <div class="form-group col-md-6 mt-3 mb-3">
                            <label for="">Request For</label>
                            <input class="form-control" id="requestFor" name="requestFor" />
                        </div>
                        <div class="form-group">
                            <label for="" class="mt-3">Description</label>
                            <textarea class="form-control" id="description" name="description" style="height: 300px;"> </textarea>
                        </div>
                        <input type="hidden" id="softwareId" name="softwareId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnRequest" type="button" value=" submit" class="btn btn-success">Submit</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="pleasewait" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered  modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex justify-content-center">
                    <div class="spinner-border text-primary mt-3" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <div class="justify-content-center">
                    <h2 class="text-center ms-3 mt-3" style="font-size:20px;">Loading...</h2>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            SoftwareServices();
        });
    </script>
}
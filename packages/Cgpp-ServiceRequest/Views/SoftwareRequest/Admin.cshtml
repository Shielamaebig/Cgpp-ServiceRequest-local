@section scripts
{
    <script>
        function printthispage() {
            document.getElementById('divButtons').style.visibility = 'hidden';
            window.print();
            document.getElementById('divButtons').style.visibility = 'visible';
        }
        $(document).ready(function () {
            SoftwareAdmin();
            $('#softwareDetailsModal').on('click', '.printing', function () {
                var id = $(this).attr('data-id');
                var url = '/ServiceRequest/api/softwareRequest/GetbyId/' + id;

                $.ajax({
                    type: 'GET',
                    url: url,
                    success: function (data) {
                        $('#PrintModal').modal('show');

                        $('#print').find('input[name="id"]').val(data.id);
                        $('#print').find('input[name="fullName"]').val(data.fullName);
                        $('#print').find('input[name="ticket"]').val(data.ticket);
                        $('#print').find('select[name="informationSystemId"]').val(data.informationSystemId);

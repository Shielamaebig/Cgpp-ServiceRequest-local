
@{
    ViewBag.Title = "HardwareRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between mx-2">
                    Activity Logs
                </h4>
                <div class="table-responsive">
                    <table id="HardwareActivities" class="table table-condensed display">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Departments</th>
                                <th>Divisions</th>
                                <th>Log</th>
                                <th>Date Activity</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            HardwareActivity();
        });
    </script>
}


